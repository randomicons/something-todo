<li class="view" ic-get-from="/todos/$task.id/edit" ic-trigger-on="click" ic-replace-target="true">
    <span >$task.name</span>
    <span>
        due: $task.date()
    </span>
    <button
        class="destroy"
        ic-delete-from="/todos/$task.id"
        ic-target="closest li"
        ic-replace-target="true">x</button>
</li>