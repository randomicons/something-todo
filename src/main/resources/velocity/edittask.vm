<li>
    ## <form id="edit-todo" ic-replace-target="true" ic-target="closest li" ic-put-to="/todos/$todo.id">
    <form class="edit-task"
            ic-target="closest li"
            ic-put-to="/todos/$task.id"
            ic-swap-style="append">

        <input
            ic-target="closest li"
            ic-trigger-on="blur"
            ic-put-to="/todos/$task.id"
            name="task-name"
            class="input-name width-dynamic"
            value="$task.name"
            ic-swap-style="append"
            pattern=".+"/>
        ## <input
        ##     class="edit-date"
        ##     type="date"
        ##     ic-replace-target="true"
        ##     ic-target="closest li"
        ##     ic-trigger-on="blur"
        ##     ic-put-to="/todos/$todo.id"
        ##     name="todo-name"
        ##     placeholder="date"
        ##     value="$todo.name"/>
        ## <input class="edit-name" name="todo-name" value="$todo.name" pattern=".+"/>
        <label class="input-date">
            due by
            <input
                ic-target="closest li"
                ic-trigger-on="blur"
                ic-put-to="/todos/$task.id"
                data-toggle="datepicker"
                placeholder="m-d-yyyy"
                name="task-date"
                #if($task.dueDate)
                    value="$task.date()"
                #end>
        </label>
        <span class="pomo-countdown"></span>    
        <div class="actions">
            <input type="image"
                class="button-delete"
                alt="delete task"
                src="images/delete-task-icon.svg"
                ic-trigger-on="click"
                ic-delete-from="/todos/$task.id"
                ic-target="closest li"
                ic-replace-target="true">
            <input type="image"
                class="button-delete"
                alt="delete task"
                src="images/check-icon.svg"
                ic-trigger-on="click"
                ic-delete-from="/todos/complete/$task.id"
                ic-target="closest li"
                ic-replace-target="true">
            <input type="image" alt="start pomo timer" src="images/pomo-timer-icon.svg" class="button-pomo">
        </div>
    </form>
</li>